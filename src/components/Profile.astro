---
// src/components/Profile.astro
export interface Farm {
  slug: string;
  name: string;
  location: string;
  description: string;
  image: string;
  altitude?: string;
  variety?: string;
  certifications?: string[];
}

const { farm } = Astro.props as { farm: Farm };
---

<article class="max-w-4xl mx-auto bg-white shadow-lg rounded-2xl overflow-hidden mt-6 md:mt-12">
  <!-- Hero Image -->
  <div class="w-full h-64 md:h-96 overflow-hidden">
    <img 
      src={farm.image} 
      alt={farm.name} 
      class="w-full h-full object-cover object-center transition-transform duration-500 hover:scale-105" 
    />
  </div>

  <!-- Farm Details -->
  <div class="p-6 md:p-10 flex flex-col gap-4">
    <h1 class="text-3xl md:text-5xl font-bold text-gray-900">{farm.name}</h1>
    <p class="text-sm md:text-base text-gray-500 flex items-center gap-2">üìç {farm.location}</p>

    <p class="text-gray-700 text-base md:text-lg leading-relaxed mt-4">{farm.description}</p>

    <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 gap-4 text-gray-700">
      {farm.altitude && (
        <div class="flex items-center gap-2">
          <span class="font-semibold">Altitude:</span>
          <span>{farm.altitude}</span>
        </div>
      )}
      {farm.variety && (
        <div class="flex items-center gap-2">
          <span class="font-semibold">Variety:</span>
          <span>{farm.variety}</span>
        </div>
      )}
    </div>

    {farm.certifications && farm.certifications.length > 0 && (
      <div class="mt-6">
        <h2 class="text-lg font-semibold text-gray-800 mb-2">Certifications</h2>
        <ul class="flex flex-wrap gap-2">
          {farm.certifications.map(cert => (
            <li class="bg-emerald-100 text-emerald-700 px-3 py-1 rounded-full text-xs font-medium">
              {cert}
            </li>
          ))}
        </ul>
      </div>
    )}
  </div>
</article>
